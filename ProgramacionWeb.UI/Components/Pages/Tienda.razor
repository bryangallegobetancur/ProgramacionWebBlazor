        <!-- Sección: Formulario -->
        <section id="formulario">
            <h2><strong>Formulario</strong></h2>
            <p style="font-size: 18px; margin-bottom: 30px; color: #555;">
                Complete el siguiente formulario con toda la información que se pide.
            </p>
            
            <div class="quote-form">
                <form action="~/js/myjs.js" method="post" id="quoteForm">
                    <div class="form-group">
                        <label for="nombre">Nombre Completo *</label>
                        <input type="text" name="nombre" required>
                    </div>

                    <div class="form-group">
                        <label for="apodo">Apodo *</label>
                        <input type="text" name="apodo" required>
                    </div>

                    <div class="form-group">
                        <label for="colorCabello">Color de Cabello *</label>
                        <input type="text" name="colorCabello" required>
                    </div>

                    <div class="form-group">
                        <label for="colorOjos">Color de Ojos *</label>
                        <input type="text" name="colorOjos" required>
                    </div>

                    <div class="form-group">
                        <label for="edad">Edad *</label>
                        <input type="text" name="edad" required>
                    </div>

                    <div class="form-group">
                        <label for="hobby">Hobby (sólo uno) *</label>
                        <select name="hobby_categoria">
                            <option value="">Seleccione...</option>
                            <option value="leer">Leer</option>
                            <option value="escribir">Escribir</option>
                            <option value="cocinar">Cocinar</option>
                            <option value="pintar">Pintar</option>
                            <option value="instrumentos">Tocar instrumentos</option>
                            <option value="deporte-futbol">Hacer deporte - Fútbol</option>
