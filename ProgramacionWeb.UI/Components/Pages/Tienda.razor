                            <option value="fotografia">Fotografía</option>
                            <option value="jardineria">Jardinería</option>
                            <option value="videojuegos">Videojuegos</option>
                            <option value="manualidades-origami">Manualidades - Origami</option>
                            <option value="manualidades-ceramica">Manualidades - Cerámica</option>
                            <option value="manualidades-bordado">Manualidades - Bordado</option>
                            <option value="aire-senderismo">Actividades al aire libre - Senderismo</option>
                            <option value="aire-camping">Actividades al aire libre - Camping</option>
                        </select>
                    </div>
                </form>

